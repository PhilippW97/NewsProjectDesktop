<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.image.ImageView?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<AnchorPane fx:id="loginWindow" prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" prefHeight="24.0" prefWidth="38.0" text="Login">
            <font>
                <Font size="14.0" />
            </font></Label>
        <Pane layoutX="10.0" layoutY="58.0" prefHeight="226.0" prefWidth="384.0">
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <children>
                <Label layoutX="74.0" layoutY="86.0" prefHeight="24.0" prefWidth="38.0" text="Login:" />
                <Label layoutX="74.0" layoutY="128.0" prefHeight="24.0" prefWidth="66.0" text="Password:" />
                <TextField fx:id="usernameBox" layoutX="150.0" layoutY="86.0" prefHeight="25.0" prefWidth="160.0" promptText="UserID" />
                <TextField fx:id="passwordBox" layoutX="150.0" layoutY="128.0" prefHeight="25.0" prefWidth="160.0" promptText="Password" />
                <MFXButton buttonType="RAISED" layoutX="70.0" layoutY="180.0" onAction="#onLogin" rippleColor="#509451" text="Login" />
                <MFXButton buttonType="RAISED" layoutX="256.0" layoutY="180.0" onAction="#onExit" rippleColor="#509451" text="Cancel" />
                <ImageView fitHeight="63.0" fitWidth="126.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </Pane>
    </children>
</AnchorPane>
